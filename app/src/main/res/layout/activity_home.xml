<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Home.HomeActivity">

    <ImageView
        android:id="@+id/nav_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_baseline_dehaze_24"
        android:translationZ="90dp" />

    <View
        android:id="@+id/homeScreenPanel"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:background="@drawable/ic_homescreenpanel" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Hello"
        android:fontFamily="@font/montserrat"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="85dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:textSize="20sp"
        android:id="@+id/helloText"/>-->
    <TextView
        android:id="@+id/helloTextName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/montserrat"
        android:maxLength="15"
        android:text="Zuha"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="148dp"
        android:layout_height="236dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="140dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/ic_card"
        android:elevation="10dp"

        >

        <TextView
            android:id="@+id/donor_status"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"
            android:text="Donor Status"
            android:textAppearance="@style/your_blood_"
            android:textStyle="bold"
            android:translationZ="90dp" />

        <ImageView
            android:id="@+id/donor_status_icon_approved"
            android:layout_width="101dp"
            android:layout_height="130dp"

            android:layout_centerInParent="true"
            android:src="@drawable/waiting"
            android:translationZ="90dp" />

        <TextView
            android:id="@+id/donation_Line"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/donor_status_icon_approved"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat"

            android:text="You cannot Donate"
            android:textColor="#000000"
            android:translationZ="90dp"


            />
    </RelativeLayout>

    <View
        android:id="@+id/card1"
        android:layout_width="148dp"
        android:layout_height="236dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/ic_card"
        android:elevation="10dp" />

    <TextView
        android:id="@+id/your_blood_"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal|top"
        android:text="@string/your_blood_"
        android:textAppearance="@style/your_blood_"
        android:textStyle="bold"
        android:translationZ="90dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_blood_"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:background="@drawable/union"
        android:orientation="vertical"

        android:translationZ="90dp">

        <TextView
            android:id="@+id/bloodGroupTextBloodDrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat"

            android:text="O+"
            android:textColor="#ffffff"
            android:textSize="38sp"

            android:textStyle="bold"
            android:translationZ="90dp" />

    </RelativeLayout>


    <ImageView
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:id="@+id/findDonorsBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:src="@drawable/find_donors"
        android:contentDescription="TODO"/>
    <ImageView
        android:id="@+id/donateBloodBtnEnabled"
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:src="@drawable/donate_blood"
        android:contentDescription="TODO" />
    <ImageView
        android:id="@+id/donateBloodBtnDisabled"
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:src="@drawable/donate_blood_disabled"
        android:visibility="invisible"
        android:contentDescription="TODO" />

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register as hospital"
        android:id="@+id/registerAsHospital"/>-->


</RelativeLayout>