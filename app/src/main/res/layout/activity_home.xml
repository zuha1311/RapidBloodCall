<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="#ffffff">

  <ImageView
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/ic_baseline_dehaze_24"
      android:translationZ="90dp"
      android:layout_alignParentTop="true"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="36dp"
      android:id="@+id/nav_menu"/>

    <View
        android:id="@+id/homeScreenPanel"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:background="@drawable/ic_homescreenpanel"
        />
    
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Hello"
        android:fontFamily="@font/montserrat"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="85dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:textSize="20sp"
        android:id="@+id/helloText"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Zuha"
        android:maxLength="15"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="7dp"
        android:textSize="20sp"
        android:id="@+id/helloTextName"/>


    <View
        android:id="@+id/card2"
        android:layout_width="148dp"
        android:layout_height="236dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/ic_card"
        android:elevation="10dp"

        />
    <TextView
        android:id="@+id/donor_status"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:gravity="center_horizontal|top"
        android:text="Donor Status"
        android:textAppearance="@style/your_blood_"
        android:translationZ="90dp"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="101dp"
        android:layout_height="130dp"
        android:src="@drawable/approved"
        android:layout_below="@+id/donor_status"
        android:translationZ="90dp"
       android:layout_alignParentRight="true"
        android:layout_marginRight="48dp"
        android:id="@+id/donor_status_icon_approved"
        android:layout_marginTop="-20dp"/>
    <TextView
        android:id="@+id/donation_Line"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/donor_status_icon_approved"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:text="You can Donate"
        android:fontFamily="@font/montserrat"
        android:translationZ="90dp"
        android:textColor="#000000"


       />

    <View
        android:id="@+id/card1"
        android:layout_width="148dp"
        android:layout_height="236dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/ic_card"
        android:elevation="10dp"
        />

    <TextView
        android:id="@+id/your_blood_"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="160dp"
        android:gravity="center_horizontal|top"
        android:text="@string/your_blood_"
        android:textAppearance="@style/your_blood_"
        android:translationZ="90dp"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/union"
        android:layout_below="@+id/your_blood_"
        android:translationZ="90dp"
        android:layout_alignParentStart="true"

        android:layout_marginStart="48dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="O+"
            android:textColor="#ffffff"
            android:textSize="38sp"
            android:textStyle="bold"

            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"

            android:translationZ="90dp"
            android:id="@+id/bloodGroupTextBloodDrop"/>

    </RelativeLayout>


    <ImageView
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/find_donors"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:id="@+id/findDonorsBtn"/>

    <ImageView
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/donate_blood"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:id="@+id/donateBloodBtn"/>



</RelativeLayout>