<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date : "
        android:id="@+id/daterecievedTextView"
        android:fontFamily="@font/montserrat"
        android:textColor="#100c0c"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/12/18"
        android:id="@+id/dateReceived"
        android:fontFamily="@font/montserrat"
        android:textColor="#100c0c"
        android:layout_toEndOf="@+id/daterecievedTextView"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/receiverIDTextViewreceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="65dp"
        android:text="Donor ID :"
        android:textColor="#100c0c"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#43EQ"
        android:id="@+id/donorID"
        android:fontFamily="@font/montserrat"
        android:textColor="#100c0c"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Location : "
        android:id="@+id/locationTextViewreceived"
        android:fontFamily="@font/montserrat"
        android:textColor="#6a6a6a"
        android:textSize="13sp"
        android:layout_below="@id/daterecievedTextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123, XYZ Apt"
        android:id="@+id/locationReceived"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:textColor="#6a6a6a"
        android:layout_toEndOf="@+id/locationTextViewreceived"
        android:textSize="13sp"
        android:layout_below="@id/dateReceived"/>

    <TextView
        android:id="@+id/qtyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:text="Quantity : "
        android:textColor="#6a6a6a"
        android:textSize="13sp"
        android:layout_below="@id/donorID"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 units"
        android:layout_marginTop="5dp"
        android:id="@+id/quantityReceived"
        android:fontFamily="@font/montserrat"
        android:textColor="#6a6a6a"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:textSize="13sp"
        android:layout_below="@id/donorID"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_history_line"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Details >"
        android:textColor="#EA0C0C"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/montserrat"

        android:textSize="13sp"
        android:textStyle="bold"/>

</RelativeLayout>