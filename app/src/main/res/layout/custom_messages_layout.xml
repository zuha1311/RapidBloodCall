<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/receiver_message_text"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/receiver_msg_layout"
        android:text="Reciever messages here"
        android:fontFamily="@font/montserrat"
        android:textSize="15sp"
        android:textColor="#000000"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sender_message_text"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_msg_layout"
        android:text="Sender messages here"
        android:fontFamily="@font/montserrat"
        android:textSize="15sp"
        android:textColor="#000000"
        android:padding="10dp"/>

</RelativeLayout>